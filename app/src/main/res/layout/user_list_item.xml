<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_list_item_height"
    android:layout_margin="@dimen/regular_item_margin"
    android:orientation="horizontal"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    card_view:cardElevation="@dimen/cardview_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userListItemGravatar"
            android:layout_width="@dimen/user_gravatar_height"
            android:layout_height="@dimen/user_gravatar_height"
            android:layout_margin="@dimen/regular_item_margin"
            />

        <RelativeLayout
            android:id="@+id/userInfoRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/userListItemGravatar"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/regular_item_padding"
                android:text="Name"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>


            <!--Put silver badge centered first so it can be used as reference-->
            <TextView
                android:id="@+id/locationTxt"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTxt"
                android:layout_marginBottom="@dimen/regular_item_margin"
                />

            <TextView
                android:id="@+id/silverBadgeTxt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/silver_badge_icon"
                android:text="   "
                android:textSize="18sp" />


            <!--Put gold badge to left of silver-->
            <TextView
                android:id="@+id/goldBadgeTxt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:text="   "
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/gold_badge_icon"
                android:layout_toLeftOf="@id/silverBadgeTxt"
                />


            <!--Put bronze badge to right of silver-->
            <TextView
                android:id="@+id/bronzeBadgeTxt"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:text="   "
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/silverBadgeTxt"
                android:drawableLeft="@drawable/bronze_badge_icon"
                />

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>