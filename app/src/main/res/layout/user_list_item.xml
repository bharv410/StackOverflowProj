<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_list_item_height"
    android:layout_margin="@dimen/regular_item_margin"
    android:orientation="horizontal"
    card_view:cardCornerRadius="@dimen/cardview_corner_radius"
    card_view:cardElevation="@dimen/cardview_elevation">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/userListItemGravatar"
            android:layout_width="@dimen/user_gravatar_height"
            android:layout_height="@dimen/user_gravatar_height"
            android:layout_margin="@dimen/regular_item_margin"
            />


        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/regular_item_padding"
            android:layout_marginLeft="@dimen/regular_item_margin"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            card_view:layout_anchor="@+id/userListItemGravatar"
            card_view:layout_anchorGravity="right|top"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/goldBadgeTxt"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="24sp"
            android:text="0"
            android:layout_marginLeft="@dimen/regular_item_margin"
            card_view:layout_anchor="@+id/userListItemGravatar"
            card_view:layout_anchorGravity="right|bottom"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/gold_badge_icon"
            />


    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>